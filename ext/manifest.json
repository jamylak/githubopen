{
  "manifest_version": 3,
  "name": "Send URL to Local Server",
  "version": "1.0",
  "description": "Sends the current tab URL to a local server",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:5555/*"
  ],
  "commands": {
    "send_url": {
      "suggested_key": {
        "mac": "Command+B",
        "default": "Ctrl+B"
      },
      "description": "Send current tab URL to server"
    }
  }
}